<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BobaTeaApp.Mobile.Controls.EmptyStateView"
             x:Name="EmptyStateControl">

    <VerticalStackLayout Spacing="20"
                        Padding="40"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        IsVisible="{Binding IsVisible, Source={x:Reference EmptyStateControl}}">

        <Label Text="{Binding Icon, Source={x:Reference EmptyStateControl}}"
               FontSize="60"
               HorizontalOptions="Center"
               TextColor="{StaticResource Gray400}"/>

        <Label Text="{Binding Title, Source={x:Reference EmptyStateControl}}"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{StaticResource Gray900}"/>

        <Label Text="{Binding Message, Source={x:Reference EmptyStateControl}}"
               FontSize="14"
               HorizontalOptions="Center"
               TextColor="{StaticResource Gray600}"
               HorizontalTextAlignment="Center"
               MaximumWidthRequest="300"/>

        <Button Text="{Binding ActionText, Source={x:Reference EmptyStateControl}}"
                Command="{Binding ActionCommand, Source={x:Reference EmptyStateControl}}"
                IsVisible="{Binding ShowAction, Source={x:Reference EmptyStateControl}}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="8"
                Padding="20,12"
                Margin="0,10,0,0"/>

    </VerticalStackLayout>

</ContentView>

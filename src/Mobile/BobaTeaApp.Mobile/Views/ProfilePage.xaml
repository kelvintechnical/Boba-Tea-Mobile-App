<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BobaTeaApp.Mobile.Views.ProfilePage"
             Title="Profile">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Label Text="{Binding Profile.FullName}" FontAttributes="Bold" FontSize="24" />
            <Label Text="{Binding Profile.Email}" />
            <Label Text="{Binding Profile.PhoneNumber}" />
            <Button Text="Logout" Command="{Binding LogoutCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

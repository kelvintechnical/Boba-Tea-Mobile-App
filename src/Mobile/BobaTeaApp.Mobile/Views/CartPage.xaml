<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BobaTeaApp.Mobile.Views.CartPage"
             Title="Cart">
    <VerticalStackLayout Padding="16" Spacing="12">
        <CollectionView ItemsSource="{Binding Items}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,Auto" Padding="12" BackgroundColor="White" CornerRadius="14">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding LineTotal, StringFormat='${0:F2}'}" />
                        </VerticalStackLayout>
                        <HorizontalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
                            <Button Text="-" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DecrementCommand}" CommandParameter="{Binding .}" />
                            <Label Text="{Binding Quantity}" />
                            <Button Text="+" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IncrementCommand}" CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label Text="{Binding Subtotal, StringFormat='Subtotal: ${0:F2}'}" FontAttributes="Bold" FontSize="18" />
        <Button Text="Checkout" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateCheckoutCommand}" />
    </VerticalStackLayout>
</ContentPage>

<?xml version="1.0" encoding="UTF-8"?>
<Shell
    x:Class="BobaTeaApp.Mobile.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BobaTeaApp.Mobile.Views"
    Title="Bloom Boba">
    <TabBar>
        <ShellContent Title="Menu" ContentTemplate="{DataTemplate views:MenuPage}" />
        <ShellContent Title="Cart" ContentTemplate="{DataTemplate views:CartPage}" />
        <ShellContent Title="Orders" ContentTemplate="{DataTemplate views:OrderHistoryPage}" />
        <ShellContent Title="Favorites" ContentTemplate="{DataTemplate views:FavoritesPage}" />
        <ShellContent Title="Profile" ContentTemplate="{DataTemplate views:ProfilePage}" />
    </TabBar>
</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BobaTeaApp.Mobile.Views.OrderHistoryPage"
             Title="Orders">
    <CollectionView ItemsSource="{Binding Orders}" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="16" Margin="12" CornerRadius="20">
                    <VerticalStackLayout>
                        <Label Text="{Binding OrderNumber}" FontAttributes="Bold" />
                        <Label Text="{Binding Status}" />
                        <Label Text="{Binding Total, StringFormat='${0:F2}'}" />
                        <Button Text="Track" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.TrackCommand}" CommandParameter="{Binding OrderNumber}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>

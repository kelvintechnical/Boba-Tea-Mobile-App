<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BobaTeaApp.Mobile.Views.ProductDetailPage"
             Title="Product">
    <VerticalStackLayout Padding="24" Spacing="16">
        <Image Source="{Binding Product.ImageUrl}" HeightRequest="220" Aspect="AspectFill" />
        <Label Text="{Binding Product.Name}" FontSize="24" FontAttributes="Bold" />
        <Label Text="{Binding Product.Description}" />
        <Stepper Minimum="1" Value="{Binding Quantity}" Maximum="10" />
        <Label Text="{Binding Product.BasePrice, StringFormat='${0:F2}'}" FontAttributes="Bold" FontSize="20" />
        <Button Text="Add to cart" Command="{Binding AddToCartCommand}" />
    </VerticalStackLayout>
</ContentPage>

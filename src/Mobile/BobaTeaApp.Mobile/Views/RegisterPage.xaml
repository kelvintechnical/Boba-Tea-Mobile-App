<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BobaTeaApp.Mobile.Views.RegisterPage"
             Title="Register">
    <VerticalStackLayout Padding="24" Spacing="14">
        <Entry Placeholder="Full name" Text="{Binding FullName}" />
        <Entry Placeholder="Email" Text="{Binding Email}" />
        <Entry Placeholder="Phone" Text="{Binding PhoneNumber}" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
        <Button Text="Create account" Command="{Binding RegisterCommand}" />
    </VerticalStackLayout>
</ContentPage>
